#!/usr/bin/python3
import os
import glob

import carousel
from carousel import log

log.init( '/tmp/carousel_music.log')

ROOT = os.path.dirname(os.path.abspath(__file__))
FILELIST = os.path.join( ROOT, "musiclist.txt") 
MUSIC_DIR = os.path.join(ROOT, "music")

   
def buildMusicList(musicDir):
    files = glob.glob('{}/*.ON/*'.format(musicDir))
    return files

try:
	supervisor = carousel.Supervisor(MUSIC_DIR, FILELIST, buildMusicList)

	supervisor.startProcess(['/usr/bin/mpv', '--really-quiet', '--loop-playlist=inf', '--playlist={}'.format(FILELIST)])#alternative:  ['/usr/bin/mplayer', '-nolirc', '-msglevel', 'all=3', '-loop', '0', '-playlist', FILELIST]
	supervisor.monitor()
except Exception as e:
	log.exception(e)



